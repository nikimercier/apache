{
  "extends": "eslint:recommended",
  "env": {
    "es6":    true,
    "mocha":  false,
    "node":   false,
    "browser": true
  },
  "rules": {
    "consistent-return" : 2,
    "indent"            : [1, 2],
    "no-else-return"    : 1,
    "semi"              : [1, "always"],
    "space-unary-ops"   : 2,
    "no-console"        : 0
  },
  "globals": {
    "angular": true,
    "io": true,
    "moment": true
  }
}
